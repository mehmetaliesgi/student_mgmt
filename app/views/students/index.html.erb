<%= render "students/partials/flash_messages" %>

<h1>Listing Students</h1>
<%= link_to 'New Student', new_student_path %>
<table>
    <thead>
        <tr>
            <th>Student</th> 
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.name_with_email %></td>
                <td><%= link_to "View", student %></td>
                <td><%= link_to "Edit", edit_student_path(student) %></td>
                <td><%= link_to 'Delete',student_path(student),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%></td>
            </tr>
        <% end %>
    </tbody>
</table>