<div class="card">
    <div class="card-header">
      Filters
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: :admin_projects do |f| %>
        
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name_start, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description_cont, class: 'form-control' %>
        </div>      
      
        <div class="form-group">
          <%= f.label :created_at %>
          <%= f.date_field :created_at, class: 'form-control' %>
          <%= f.date_field :created_at, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :updated_at %>
          <%= f.date_field :updated_at_gteq, class: 'form-control' %>
          <%= f.date_field :updated_at_lteq, class: 'form-control' %>
        </div>

        <div class="form-group">
          <div class="float-right">
            <%= link_to "Clear", request.path, :class => "btn btn-default" %>
  
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
  
      <% end %>
    </div>
  </div>