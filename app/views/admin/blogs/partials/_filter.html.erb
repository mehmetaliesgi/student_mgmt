<div class="card">
    <div class="card-header">
      Filters
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: :admin_blogs do |f| %>
        
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title_start, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>      
      
        <div class="form-group">
          <%= f.label :student_id %>
          <%= f.text_field :student_id_eq, class: 'form-control' %>
        </div>    
        
        <div class="form-group">
          <%= f.label :created_at %>
          <%= f.date_field :created_at, class: 'form-control' %>
          <%= f.date_field :created_at, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :updated_at %>
          <%= f.date_field :updated_at_gteq, class: 'form-control' %>
          <%= f.date_field :updated_at_lteq, class: 'form-control' %>
        </div>

        <div class="form-group">
          <div class="float-right">
            <%= link_to "Clear", request.path, :class => "btn btn-default" %>
  
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
  
      <% end %>
    </div>
  </div>