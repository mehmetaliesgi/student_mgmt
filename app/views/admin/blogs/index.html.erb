<div class="col-lg-12">
    <div class="form-group" style="display: flex; align-items: center;">
        <h1>Listing Blogs</h1>
        <%= render "admin/blogs/partials/flash_messages" %>
    </div>
    <div class="form-group" style="margin-bottom: 100px;">
        <%= link_to 'New Blog', new_admin_blog_path, class: "btn btn-primary btn-lg", style: "float: right;" %>
    </div>
    <div class="row">
        <div class="col-2">
            <%= render 'admin/blogs/partials/filter' %>
        </div>
        <div class="col-10">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center"><%= sort_link(@q, :title, default_order: :asc) %></th>
                        <th class="text-center">Student Name</th> 
                        <th class="text-center">Student Email</th> 
                        <th colspan="3" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="tbody-light">
                    <% @blogs.each do |blog| %>
                        <tr>
                            <td><%= blog.title %></td>
                            <td><%= link_to blog.student.full_name, admin_student_path(blog) %></td>
                            <td><%= link_to blog.student.email, admin_student_path(blog) %></td>
                            <td class="text-center"><%= link_to "View", admin_blog_path(blog), class: "btn btn-primary btn-sm" %></td>
                            <td class="text-center"><%= link_to "Edit", edit_admin_blog_path(blog), class: "btn btn-warning btn-sm" %></td>
                            <td class="text-center"><%= link_to 'Delete',admin_blog_path(blog),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <div style="margin: 0 auto; width: 18%;"><%== pagy_bootstrap_nav(@pagy) %></div>
</div>