<div class="col-lg-12">
  <div class="form-group" style="display: flex; align-items: center;">
    <p style="color: green"><%= notice %></p>
    <h1>Courses</h1>
  </div>
  <div class="form-group" style="margin-bottom: 100px;">
    <%= link_to "New course", new_admin_course_path, class: "btn btn-primary btn-lg", style: "float: right;" %>
  </div>
  <div class="row">
    <div class="col-2">
        <%= render 'admin/courses/filter' %>
    </div>
    <div class="col-10">
      <table class="table table-bordered table-hover">
          <thead class="thead-dark">
              <tr>
                  <th class="text-center"><%= sort_link(@q, :name, default_order: :asc) %></th>
                  <th class="text-center">Course Description</th> 
                  <th colspan="3" class="text-center">Actions</th>
              </tr>
          </thead>
          <tbody class="tbody-light">
              <% @courses.each do |course| %>
                  <tr>
                      <td><%= course.name %></td>
                      <td><%= course.description %></td>
                      <td class="text-center"><%= link_to "View", admin_course_path(course), class: "btn btn-primary btn-sm"  %></td>
                      <td class="text-center"><%= link_to "Edit", edit_admin_course_path(course), class: "btn btn-warning btn-sm"  %></td>
                      <td class="text-center"><%= link_to 'Delete',admin_course_path(course),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" %></td>
                  </tr>
              <% end %>
          </tbody>
      </table>
    </div>  
    
    </div>
    <div style="margin: 0 auto; width: 18%;"><%== pagy_bootstrap_nav(@pagy) %></div>
</div>