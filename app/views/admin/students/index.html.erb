    <div class="col-lg-12">
        <%= render "admin/students/partials/flash_messages" %>
        <div class="form-group" style="display: flex; align-items: center;">
            <h1>Listing Students</h1>
        </div>
        <hr>
        <div class="form-group" style="margin-bottom: 100px;">
            <div style = "float: left;"><h1>Stundents: <%= @students.count %> / <%= Student.count %> </h1></div>
            <%= link_to 'New Student', new_admin_student_path, class: "btn btn-primary btn-lg", style: "float: right;" %>
        </div>

        <div class="row">
            <div class="col-2">
              <%= render 'shared/filters' %>
            </div>
            <div class="col-10">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center"><%= sort_link(@q, :first_name, default_order: :asc) %></th>
                        <th class="text-center"><%= sort_link(@q, :last_name, default_order: :asc) %></th>
                        <th class="text-center"><%= sort_link(@q, :email, default_order: :asc) %></th> 
                        <th colspan="3" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="tbody-light">
                    <% @students.each do |student| %>
                        <tr>
                            <td><%= student.first_name %></td>
                            <td><%= student.last_name %></td>
                            <td><%= student.email %></td>
                            <td class="text-center"><%= link_to "View", admin_student_path(student), class: "btn btn-primary btn-sm" %></td>
                            <td class="text-center"><%= link_to "Edit", edit_admin_student_path(student), class: "btn btn-warning btn-sm" %></td>
                            <td class="text-center"><%= link_to 'Delete',admin_student_path(student), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            </div>
        </div>
        <div style="margin: 0 auto; width: 18%;"><%== pagy_bootstrap_nav(@pagy) %></div>

    </div>
