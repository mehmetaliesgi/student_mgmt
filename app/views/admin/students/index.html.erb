<div class="col-lg-12">
    <%= render "admin/students/partials/flash_messages" %>

    <h1>Listing Students</h1>
    <hr>
    <div class="form-group" style="margin-bottom: 70px;"><div style = "float: left;"><h1>Stundents: <%= @students.count %> / <%= Student.count %> </h1></div><%= link_to 'New Student', new_admin_student_path, class: "btn btn-primary btn-lg", style: "float: right;" %></div>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Student</th> 
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody class="tbody-light">
            <% @students.each do |student| %>
                <tr>
                    <td><%= student.name_with_email %></td>
                    <td><%= link_to "View", admin_student_path(student) %></td>
                    <td><%= link_to "Edit", edit_admin_student_path(student) %></td>
                    <td><%= link_to 'Delete',admin_student_path(student), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
    <div style="margin: 0 auto; width: 18%;"><%== pagy_bootstrap_nav(@pagy) %></div>

</div>