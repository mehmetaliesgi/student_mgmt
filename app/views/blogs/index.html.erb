<%= render "blogs/partials/flash_messages" %>

<h1>Listing Blogs</h1>
<%= link_to 'New Blog', new_blog_path %>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Student</th> 
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @blogs.each do |blog| %>
            <tr>
                <td><%= blog.title %></td>
                <td><%= link_to "#{blog.name_with_email}", admin_student_path(blog) %></td>
                <td><%= link_to "View", blog %></td>
                <td><%= link_to "Edit", edit_blog_path(blog) %></td>
                <td><%= link_to 'Delete',blog_path(blog),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%></td>
            </tr>
        <% end %>
    </tbody>
</table>