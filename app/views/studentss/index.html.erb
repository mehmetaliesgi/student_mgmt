<div class="col-lg-10">
    <%= render "students/partials/flash_messages" %>

    <h1>Listing Students</h1>
    <div class="form-group" style="margin-bottom: 70px;"><%= link_to 'New Student', new_student_path, class: "btn btn-primary btn-lg", style: "float: right;" %></div>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Student</th> 
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody class="tbody-light">
            <% @students.each do |student| %>
                <tr>
                    <td><%= student.name_with_email %></td>
                    <td><%= link_to "View", student %></td>
                    <td><%= link_to "Edit", edit_student_path(student) %></td>
                    <td><%= link_to 'Delete',student_path(student),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%></td>
                </tr>
            <% end %>
        </tbody>
</table>
</div>