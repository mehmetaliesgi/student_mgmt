<div class="col-lg-8">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-body">
      <p style="color: green"><%= notice %></p>

      <%= render @project %>

      <div class="form-group">
        <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-primary btn-lg" %> |
        <%= button_to "Destroy this project", @project, method: :delete, class: "btn btn-danger btn-lg" %>
      </div>
    </div>
  </div>
</div>