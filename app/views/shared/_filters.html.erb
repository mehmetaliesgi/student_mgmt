<div class="card">
    <div class="card-header">
      Filters
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: :admin_students do |f| %>
        
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name_start, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name_cont, class: 'form-control' %>
        </div>      
      
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email_start, class: 'form-control' %>
        </div>    
        
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address_start_all, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :date_of_birth %>
          <%= f.text_field :date_of_birth_eq, class: 'form-control' %>
        </div>

        <div class="form-group">
          <div class="float-right">
            <%= link_to "Clear", request.path, :class => "btn btn-default" %>
  
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
  
      <% end %>
    </div>
  </div>